# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                        io.exercise.api.controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)
POST    /api/authenticate        @io.exercise.api.controllers.HomeController.authenticate(request: Request)
POST    /api/dashboard           @io.exercise.api.controllers.MongoController.create(request: Request)
GET     /api/dashboard           @io.exercise.api.controllers.MongoController.all()
PUT     /api/dashboard           @io.exercise.api.controllers.MongoController.update(request: Request, id: String)
DELETE  /api/dashboard           @io.exercise.api.controllers.MongoController.delete(id: String)